<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="adminFaqMapper">
 	<resultMap id="faqResultSet" type="Faq">
 		<id column="faq_no" property="faqNo"/>
 		<result column="user_nickname" property="faqWriter"/>
 		<result column="faq_title" property="faqTitle"/>
 		<result column="faq_content" property="faqContent"/>
 		<result column="faq_type" property="faqType"/>
 		<result column="enroll_date" property="enrollDate"/>
 	
 	</resultMap>
 	<select id="selectListCount"
 	        resultType="_int">
 		
 		select
 		       count(*)
 		  from faq		        	
 	</select>
 	<select id="selectList"
 	        resultMap="faqResultSet">
 		select 
 		       faq_no
 		     , user_nickname
 		     , faq_title
 		     , faq_content
 		     , faq_type
 		     , to_char(f.enroll_date, 'YYYY-MM-DD') enroll_date  
 		  from faq f
 		  join member using(user_id)
 		 order
 		    by faq_no desc      
 	</select>
 	<select id="searchListCount"
 	        resultType="_int">
 	  select
 	         count(*)
 	    from faq
 	   <choose>
 	  	 <when test="no != null">
 	   where faq_no = #{no} 	   
 	   	</when>
 	   	<when test="title != null">
 	   where faq_title like '%'|| #{title}||'%'
 	   	</when>
 	   </choose>            
 	</select>
 	<select id="searchList"
 	        resultMap="faqResultSet">
 		
 		select
 		       faq_no
 		     , user_nickname
 		     , faq_title
 		     , faq_content
 		     , faq_type
 		     , to_char(f.enroll_date, 'YYYY-MM-DD') enroll_date
 		  from faq f
 		  join member using(user_id)
 		 <choose>
 		 	<when test="no != null">
 		 where faq_no = #{no}
 		 	</when>
 		 	<when test="title != null">
 		 	where faq_title like '%'|| #{title} ||'%'
 		 	</when>
 		 </choose>  
 		 order
 		    by faq_no desc
 		         
 	</select>
</mapper>
